    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/PagedList.css")
        @Styles.Render("~/Content/style.css")
        @Styles.Render("~/Content/slideshow.css")
        @Styles.Render("~/Content/footer.css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="//cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
        <script src="https://kit.fontawesome.com/ddbe1d16ea.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    </head>
    <body>
        <div class="side-bar">
            <div class="logo--left">
                <img src="~/Images/logo.png" alt="" style="width:230px;">
            </div>
            <div class="side-bar__list">
                <div class="user-list">
                    <p>
                        @Html.ActionLink("Trang Chủ", "Index", "Home")
                    </p>
                    <p>
                        @Html.ActionLink("Sản Phẩm Hải Sản", "Index", "products")
                    </p>
                    <p>
                        @Html.ActionLink("Về chúng tôi", "Index", "aboutus")
                    </p>

                </div>
            </div>
        </div>
        <div class="main">
            <div class="header">
                @using (Html.BeginForm("Index", "Search", FormMethod.Get))
                {
                    <div class="input-search">
                        <input type="text" name="search" id="">
                    </div>
                }
                @Html.Action("ShoppingCartPartial", "shoppingcart")
            </div>
            @RenderBody()
        </div>
        <footer class="footer">
            <div class="row-footer">
                <div class="parent-footer">
                    <div class="common-footer">
                        <div class="common-present-footer">Liên Hệ</div>
                        <div class="common-col-footer">
                            <div class="text-footer">
                                <div class="common-text-footer">
                                    Chi nhánh 1 : 499, Nguyễn Đình
                                    Chiểu, Phường 2, Quận 3.
                                </div>
                                <div class="common-text-footer">
                                    Chi nhánh 2 : 267/1A, Nguyễn Văn
                                    Đậu, Phường 11, Bình Thạnh.( Chưa đón khách )
                                </div>
                                <div class="common-text-footer">
                                    Chi nhánh 3 : 39, Huỳnh Văn
                                    Bánh, Phường 17, Phú Nhuận
                                </div>
                                <div class="common-text-footer">
                                    Chi nhánh 4 : 119 , Quang Trung,
                                    Phường 10, Gò Vấp ( Mới khai trương )
                                </div>
                                <div class="common-text-footer">
                                    Chi nhánh 5 : 07, Phan Chu
                                    Trinh, Quảng Ngãi.
                                </div>
                                <div class="common-text-footer pointer">fb.com/thegioihaisan</div>
                                <div class="common-text-footer pointer">info@thegioihaisan.vn</div>
                            </div>
                        </div>
                    </div>
                </div>
        </footer>
        <script type="text/javascript" src="~/Scripts/index.js"></script>
        <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
        <script type="text/javascript" src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>
