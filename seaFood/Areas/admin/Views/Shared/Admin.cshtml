<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/styleadmin.css")
    @Styles.Render("~/Content/PagedList.css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="//cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
    <title>Admin</title>
</head>
<body>
    <div class="side-bar">
        <div class="logo--left">
            <img src="~/Images/logo.png" alt="">
        </div>
        <div class="side-bar__list">
            <div class="user-list">
                <p>
                    @Html.ActionLink("Sản Phẩm", "Index", "products")
                </p>
                <p>
                    @Html.ActionLink("Loại hải sản", "Index", "categories")
                </p>
                <p>
                    @Html.ActionLink("Hóa đơn", "Index", "orders")
                </p>
                <p>
                    @Html.ActionLink("Chi tiết đơn hàng", "Index", "order_details")
                </p>
                <p>
                    @Html.ActionLink("Chế biến", "Index", "subcategories")
                </p>
                <p>
                    @Html.ActionLink("Logout", "Logout", "homeAdmin")
                </p>
            </div>
        </div>
    </div>
    <div class="main">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
